<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- Gestore per il server Node.js (app.js) -->
      <add name="iisnode" path="app.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <!-- Regola 1: Non riscrivere le richieste per i file statici esistenti -->
        <rule name="Static Files" stopProcessing="true">
          <match url="^(.+)$" />
          <conditions logicalGrouping="MatchAll" trackAllCaptures="false">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
          </conditions>
          <action type="None" />
        </rule>

        <!-- Regola 2: Non riscrivere le richieste per le API -->
        <rule name="API" stopProcessing="true">
          <match url="^api(/|$)" />
          <action type="None" />
        </rule>

        <!-- Regola 3: Riscrivi tutte le altre richieste a app.js (il tuo server Node.js) -->
        <!-- Questo Ã¨ il fallback per il routing lato client e per le API non gestite sopra -->
        <rule name="Node.js Application">
          <match url="/*" />
          <action type="Rewrite" url="app.js" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Configurazione di iisnode semplificata -->
    <iisnode 
      node_env="production" 
      loggingEnabled="true" 
      logDirectory="iisnode" 
      watchedFiles="*.js;iisnode.yml" 
    />
  </system.webServer>
</configuration>