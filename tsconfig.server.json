{
  "extends": "./tsconfig.json", // Eredita dalla configurazione base
  "compilerOptions": {
    "outDir": "./dist/backend", // Specifica dove va il JS compilato
    "module": "NodeNext",       // Usa la strategia di moduli moderna per Node
    "moduleResolution": "NodeNext", // Usa la risoluzione dei moduli moderna
    "sourceMap": false,
    "noImplicitAny": false // Mettiamo false per ora per ridurre gli errori
  },
  "include": [
    "server.ts" // Specifica ESATTAMENTE quale file compilare
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}