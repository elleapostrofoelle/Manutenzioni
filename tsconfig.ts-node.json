{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": ["server.ts", "api.ts", "dev-server.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "iisnode",
    "vite.config.ts",
    "index.tsx",
    "sw.js",
    "tsconfig.json",
    "tsconfig.server.json"
  ]
}