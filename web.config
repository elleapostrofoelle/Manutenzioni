"<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- Aggiunge il gestore iisnode per app.js -->
      <add name="iisnode" path="app.js" verb="*" modules="iisnode" />
    </handlers>
    <defaultDocument enabled="true">
      <!-- Assicura che app.js sia il documento predefinito, così IIS passa le richieste root ad esso -->
      <files>
        <add value="app.js" />
      </files>
    </defaultDocument>
    <rewrite>
      <rules>
        <!-- Regola per prevenire l'accesso diretto a app.js/debug -->
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^app.js\/debug[\/]?([0-9]+)?$" />
        </rule>
        <!-- Regola per instradare tutte le richieste a app.js, a meno che non siano per file o directory esistenti -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="app.js" />
        </rule>
      </rules>
    </rewrite>
    <security>
      <requestFiltering>
        <hiddenSegments>
          <add segment="node_modules" />
          <add segment="iisnode" />
          <!-- Nasconde la cartella dist dall'accesso diretto di IIS, poiché sarà servita da Node.js -->
          <add segment="dist" />
        </hiddenSegments>
      </requestFiltering>
    </security>
    <!-- Configurazione iisnode semplificata -->
    <iisnode
      node_env="production"
      loggingEnabled="true"
      stdoutEnabled="true"
      watchedFiles="*.js;iisnode.yml"
      maxLogFileSizeInKB="128"
      devErrorsEnabled="true"
    />
  </system.webServer>
</configuration>"